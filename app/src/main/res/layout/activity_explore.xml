<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:background="#002B5B">

            <ImageView
                android:id="@+id/backButtonExplore3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/back"
                android:contentDescription="Back"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Categories -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:useDefaultMargins="true">

            <!-- Hotels -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="#FBE9E7"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="#FBE9E7"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hotelicon"
                    android:contentDescription="Hotels" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotels"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Destinations -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="#FBE9E7"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="#FBE9E7"
                android:elevation="4dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/location"
                    android:contentDescription="Destinations" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destinations"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Packages -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="#FBE9E7"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="#FBE9E7"
                android:elevation="4dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/offer"
                    android:contentDescription="Packages" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Packages"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Foods -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="#FBE9E7"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="#FBE9E7"
                android:elevation="4dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/foodicon"
                    android:contentDescription="Foods" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foods"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </GridLayout>

        <!--fav lists-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Favourites"
            android:textColor="@color/orange"
            android:textSize="23sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/esala"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/esalaPerahera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Esala Perahera"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kandy, Central Province"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/yala"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/yalabutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yala National Park"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hambantota, Southern"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ambuluwawa"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambuluwawa Tower"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambuluwawa, Kandy"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/galle_fort_3"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galle Fort"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galle Fort, Southern"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/shangrilla"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/shangrillabutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shangrilla Hotel"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colombo, Western Province."
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/kingsburry"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/kingsburrybutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kingsburry Hotel"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colombo, Western Province."
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/gallforthotel"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galle Fort Hotel"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galle, Southern province."
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/jetwing"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jetwing Blue"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Negombo, Western province"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!--Foods-->

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/kottu"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/kottubutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kottu-Rotti"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Famous and Spicy dish."
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/rice"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/ricebutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rice and Curry."
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simple and delecious."
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/vadee"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vade"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spicy and Famous street food"
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/card"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/crab"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crab curry"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delicious and Luxurios dish."
                        android:textSize="12sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/homebutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlue"
                android:text="Home"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/explorebutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/ColorBlue2"
                android:text="Explore"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cartbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlue"
                android:text="Cart"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/profilebutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlue"
                android:text="Profile"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>


